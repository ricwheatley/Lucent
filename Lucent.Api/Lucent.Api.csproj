<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
    <PackageReference Include="Swashbuckle.AspNetCore" />
	<ProjectReference Include="..\Lucent.Scheduler\Lucent.Scheduler.csproj" />
	<ProjectReference Include="..\Lucent.Loader\Lucent.Loader.csproj" />

  </ItemGroup>	  
	
	  <ItemGroup>
		  
		  <!-- stop the implicit items -->
		  <None Remove="appsettings.json" />
		  <None Remove="appsettings.Development.json" />

		  <!-- reference the shared files located in the repo-level config folder -->
		  <None Include="..\config\appsettings.json"
				Link="config/api/appsettings.json"
				CopyToPublishDirectory="PreserveNewest" />

		  <None Include="..\config\appsettings.Development.json"
				Link="config/api/appsettings.Development.json"
				CopyToPublishDirectory="PreserveNewest" />
	  </ItemGroup>
</Project>
